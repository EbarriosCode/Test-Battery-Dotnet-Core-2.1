@model WebTesting.Models.Products;
@{
    ViewData["Title"] = "Create";
}


<br />
<h2>Crear Producto</h2>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label">Nombre</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Nombre" />
        </div>

        <div class="form-group col-md-6">
            <label class="control-label">Precio</label>
            <input type="number" class="form-control" asp-for="Price" placeholder="Precio" />
        </div>

        <div class="form-group col-md-12">
            <label class="control-label">Descripción</label>
            <textarea class="form-control" asp-for="Description" placeholder="Descripción"></textarea>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Crear</button>
</form>

