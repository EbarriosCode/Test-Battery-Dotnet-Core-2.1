@model List<WebTesting.Models.Products>
@{
    ViewData["Title"] = "Index";
}

<br />
<a href="~/Products/Create"><button class="btn btn-primary">Crear <i class="glyphicon glyphicon-plus"></i></button></a>
<br /><br />
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>
